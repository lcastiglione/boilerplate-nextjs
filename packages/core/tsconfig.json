{
  "compilerOptions": {
    "target": "es2015",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["jest"],
    "baseUrl": ".",
    "paths": {
      "@/core": ["."]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
